{
    "rl_params" : {
        "use_no_op":                          true,
        "max_no_op_duration":                 5,
        "final_training_epsilon":             0.1,
        "epsilon_decay_step_duration":        1500000,
        "evaluation_epsilon":                 0.05,
        "frames_between_ddqn_copy":           10000,

        "gamma":                              0.99,
